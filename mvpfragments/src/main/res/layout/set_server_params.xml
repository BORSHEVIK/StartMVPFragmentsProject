<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.borshevik.mvpfragments.activity.MainActivity">

    <android.support.v7.widget.AppCompatEditText
        android:hint="@string/server_ip"
        android:id="@+id/server_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatEditText
        android:hint="@string/remote_folder_name"
        android:id="@+id/remote_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/server_ip" />

    <android.support.v7.widget.AppCompatEditText
        android:hint="@string/username"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/remote_folder"/>

    <android.support.v7.widget.AppCompatEditText
        android:inputType="textPassword"
        android:hint="@string/password"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/username"/>

    <android.support.v7.widget.AppCompatButton
        android:text="@string/set_remote_params"
        android:id="@+id/button_set_remote_params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>